{
  "manifest_version": 3,
  "name": "Netflix 1080p",
  "description": "Forces 1080p and 5.1 playback for Netflix.",
  "version": "1.22",
  "author": "truedread",
  "action": {
    "default_icon": "img/icon128.png"
  },
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [{
    "matches": [
      "*://assets.nflxext.com/*/ffe/player/html/*",
      "*://www.assets.nflxext.com/*/ffe/player/html/*",
      "*://netflix.com/*",
      "*://www.netflix.com/*"
    ],
    "all_frames": true,
    "js": ["content_script.js"],
    "run_at": "document_start"
  }],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    {
      "resources": ["cadmium-playercore-6.0033.414.911-1080p.js", "netflix_max_bitrate.js"],
      "matches": ["*://*.netflix.com/*"]
    }
  ],
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "scripting"
  ],
  "host_permissions": [
    "*://assets.nflxext.com/*/ffe/player/html/*",
    "*://www.assets.nflxext.com/*/ffe/player/html/*",
    "*://netflix.com/*",
    "*://www.netflix.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}